<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cwiczenia_21_10_2022"
        android:textSize="20dp"
        android:background="#6600ff"
        android:textColor="#fff"
        android:padding="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Cwiczenie_2 "
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="#000000"
        android:textSize="25dp"

        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Rodzaje przycisków "
        android:textColor="#878787"
        android:textAlignment="center"

        android:textSize="25dp"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black"
        >

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="151dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="Zwykły przycisk"
            android:textColor="#878787"
            android:textSize="20dp">


        </TextView>

        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:backgroundTint="#6600ff"
            android:text="zwykly"

            >

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"


        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Przełącznik"
            android:textSize="20dp">

        </TextView>

        <ToggleButton
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:backgroundTint="#C3B9B9"
            android:textColor="@color/black"
            android:textOff="Off"
            android:textOn="On"

            >

        </ToggleButton>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <TextView

            android:layout_width="151dp"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:paddingRight="5dp"
            android:text="Przycisk Opcji"
            android:textColor="#878787"
            android:textSize="20dp"
            android:gravity="left"

            >


        </TextView>
        <RadioGroup
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onRadioButtonClicked"


                android:text="Opcja_1"


                ></RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onRadioButtonClicked"
                android:checked="true"

                android:text="Opcja_2"


                ></RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onRadioButtonClicked"


                android:text="Opcja_3"


                ></RadioButton>






        </RadioGroup>

    </LinearLayout>
</LinearLayout>

